@model DeadLinerWebApp.PL.Models.RecoveryPasswordViewModel
@section css {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" />
}

<style>
    .login-form h2:before, .login-form h2:after {
        width: 15%;
    }
</style>

<div class="login-form">
    <form asp-controller="Account" asp-action="RecoverPassword" method="post">
        <h2 class="text-center">Enter new password</h2>>
        <div class="form-group">
            <input asp-for="NewPassword" type="password" class="form-control" placeholder="New password">
            <span asp-validation-for="NewPassword"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
    </form>
</div>