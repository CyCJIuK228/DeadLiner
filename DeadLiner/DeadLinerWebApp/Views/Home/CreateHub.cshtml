@model DeadLinerWebApp.PL.Models.HubModel

<div class="col-md-4 mb-5">
    <a class="btn btn-primary circle" data-toggle="modal" data-target="#exampleModal">
    </a>
</div>

<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-controller="Home" asp-action="AddHub" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <input asp-for="Title" type="text" class="form-control" id="" aria-describedby="" placeholder="Hub name..." required>
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <textarea asp-for="Description" class="form-control" id="" aria-describedby="" placeholder="This Hub provides opportunity to..." required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>