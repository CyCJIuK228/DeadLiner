@model DeadLinerWebApp.PL.Models.TaskViewModel

@section css {
    <link href="./css/addTask.css" rel="stylesheet" />
}

<div class="modal" id="addTask" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="Hub" asp-action="AddTask" method="post">
                <div class="modal-header">
                    <input type="hidden" asp-for="HubName" value="@Context.Request.Query["title"]" />
                    <div class="form-group">
                        <input asp-for="TaskName" class="form-control" placeholder="Task name...">
                    </div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <textarea asp-for="Description" class="form-control" placeholder="Some words about this task..."></textarea>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="References" class="form-control" placeholder="Where mentees should find info:"></textarea>
                        <div class="form-group mt-2">
                            <strong>Assign to:</strong>
                            <select asp-for="AssignedTo" id="multiple-checkboxes" multiple="multiple" data-live-search="true">
                                @foreach (var user in Model.UsersName)
                                {
                                    <option value = "@user" >@user</option>
                                }
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>