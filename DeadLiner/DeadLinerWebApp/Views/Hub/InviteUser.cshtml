@model DeadLinerWebApp.PL.InviteUserViewModel

<div class="container mt-3">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="form-group">
                    <p>Invite user in <b>@Model.Title</b></p>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group">
                    <form asp-controller="Hub" asp-action="FindUser" method="get" style="display: inherit">
                        <input asp-for="Title" type="hidden" value="@Model.Title" />
                        <input asp-for="UserName" type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                               aria-describedby="search-addon"/>
                        <button type="submit" class="btn btn-outline-primary ml-2">Search</button>
                    </form>
                </div>
                <div class="modal-footer mt-2">
                    <a asp-controller ="Hub" asp-action="Index" asp-route-title ="@Model.Title" class="btn btn-secondary" data-dismiss="modal">Close</a>
                    <form asp-controller="Hub" asp-action="InviteUser" method="post">
                        <input asp-for="Title" type="hidden" value="@Model.Title" />
                        <input asp-for="UserName" type="hidden" value="@Model.UserName" />
                        <button type="submit" class="btn btn-primary">Invite</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>