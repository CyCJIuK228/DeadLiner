@model DeadLinerWebApp.PL.Models.TaskViewModel

@section css {
    <link href="./css/addTask.css" rel="stylesheet" />
}

<div class="modal" id="viewTask" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="form-group">
                    <label asp-for="TaskName">Task name</label>
                    <input asp-for="TaskName" class="form-control" placeholder="Task name...">
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Some words about this task..."></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="References">References</label>
                    <textarea asp-for="References" class="form-control" placeholder="Where mentees should find info:"></textarea>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>